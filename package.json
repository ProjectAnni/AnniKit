{
  "name": "anni-kit",
  "displayName": "AnniKit",
  "description": "Project Anni toolkit for VSCode.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.anni/config.toml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "anni.workspaceView.commit",
        "title": "Commit",
        "icon": "$(check)"
      },
      {
        "command": "anni.workspaceView.delete",
        "title": "Delete",
        "icon": "$(trash)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "anni.workspaceView",
          "name": "Workspace Explorer",
          "contextualTitle": "Project Anni",
          "when": "is-in-anni-workspace"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "anni.workspaceView.commit",
          "when": "view == anni.workspaceView && viewItem == untracked",
          "group": "inline"
        },
        {
          "command": "anni.workspaceView.delete",
          "when": "view == anni.workspaceView && viewItem == garbage",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.72.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
